<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="{N} Surveyor" icon="" class="action-bar">
          <NavigationButton text="Back" icon="" tap="" />
        </ActionBar>
    </Page.actionBar>
    <!--
    You can learn more about NativeScript layouts at
    https://docs.nativescript.org/ui/layout-containers
    You can view a full list of the
    class names available for styling your app at https://docs.nativescript.org/ui/theme.
    -->
    <GridLayout>
      <Placeholder creatingView="onCreatingView" id="placeholder-view" />
      <AbsoluteLayout horizontalAlignment="center" verticalAlignment="bottom">
        <Button id="capturebtn" text="Capture" tap="onTakeShot()" class="btn btn-primary"/>
      </AbsoluteLayout>
      <AbsoluteLayout horizontalAlignment="center" verticalAlignment="center">
        <Image src="res://circle-arrow" stretch="none" />
      </AbsoluteLayout>
    </GridLayout>
</Page>
